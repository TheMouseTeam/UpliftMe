<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.barmpas.upliftme">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:theme="@style/AppTheme"
        android:allowBackup="true"
        android:icon="@mipmap/ballon_main_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ballon_circle_icon"
        android:supportsRtl="true"
        tools:replace="android:allowBackup">
        <activity
            android:name="com.barmpas.upliftme.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.barmpas.upliftme.DayActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.barmpas.upliftme.PointsActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.barmpas.upliftme.HistoryActivity"
            android:screenOrientation="portrait"></activity>

        <provider
            android:name="com.barmpas.upliftme.UserActionData.UserProvider"
            android:authorities="com.barmpas.upliftme"
            android:exported="false"/>

    </application>

</manifest>